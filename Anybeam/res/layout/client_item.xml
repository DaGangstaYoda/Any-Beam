<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp" >

    <ImageView
        android:id="@+id/ivDeviceType"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/device_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_device_laptop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivDeviceType"
        android:layout_alignTop="@+id/ivDeviceType"
        android:layout_toRightOf="@+id/ivDeviceType"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDeviceName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/replaceMe"
            android:textColor="@color/black" 
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/replaceMe"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</RelativeLayout>